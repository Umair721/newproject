<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>















<form action="/update/" method="POST">
<div class="container">
    <% records.forEach(function(row){ %>

    
            <form class="form-horizontal" role="form">
                <h2 style="text-align: center;">Registration Form </h2>
                <div class="form-group">
                  <label for="id" class="col-sm-3 control-label">Id</label>
                  <div class="col-sm-9">
                      <input type="text" id="id" value="<%= row.id %>"    name="id" placeholder="Please Enter id" class="form-control">
                      
                      </div>
                  </div>
                <div class="form-group">
                    <label for="firstName" class="col-sm-3 control-label">Full Name</label>
                    <div class="col-sm-9">
                        <input type="text" id="<%= row.Name %>" placeholder="Please Enter Full Name" name="name" class="form-control" autofocus>
                        
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="col-sm-3 control-label">Email</label>
                    <div class="col-sm-9">
                        <input type="email" id="<%= row.email %>" name="email" placeholder="Please Enter Email" class="form-control">
                        
                        </div>
                    </div>
                <div class="form-group">
                            <label for="Rdate" class="col-sm-3 control-label">Registartion Date</label>
                            <div class="col-sm-9">
                                <input type="date" id="<%= row.Rdate %>" name="Rdate" placeholder="Enter your Registartion Date" class="form-control">
                    </div>
                </div>
              
                
               
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button type="submit" class="btn btn-primary btn-block">Add Records</button>
                    </div>
                    <% }) %>
                </div>
                
            </form> <!-- /form -->
        </div> <!-- ./container -->